<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="gatewayId2202" class="java.lang.Integer">
		<constructor-arg index="0" value="2" />
	</bean>
	<!-- 设置网关启动参数 -->
	<bean id="mtsCmpp20Parameter2202" class="com.lxt2.gateway.sms.protocol.cmpp20.Cmpp20_Parameter"
		scope="prototype" init-method="init">
		<property name="gatewayId" ref="gatewayId2202" />
		<property name="gatewayXmlParser" ref="gatewayXml" />
		<!-- sockt服务使用状态Connector连接，Acceptor 监听 -->
		<property name="typeSocket">
			<bean
				id="com.lxt2.gateway.sms.protocol.cmpp20.Cmpp20_Parameter.SocketType_Connector"
				class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean" />
		</property>
		<!-- 协议连接状态，MT下行，MO上行 -->
		<property name="typeLink" value="MT" />
		<!--网关协议自身版本编号 -->
		<property name="protocolVersion" value="48" />
		<!--心跳信息启用标志，true启用，false不启用 -->
		<property name="connectActiveTest" value="true" />
		<!-- 1：对“计费用户号码”免费 2：对“计费用户号码”按条计信息费 3：对“计费用户号码”按包月收取信息费 4：对“计费用户号码”的信息费封顶 5：对“计费用户号码”的收费是由SP实现 
			-99：不使用该配置 -->
		<property name="feeType" value="-99" />
		<!-- 0：默认； -99不使用该配置 ； 其他配置由用户提供； -->
		<property name="feeUserType" value="-99" />
	</bean>
	<!-- 网关配置 -->
	<bean id="mtsCmpp20GatewayConfig2202" class="com.lxt2.gateway.sms.GatewayConfig">
		<!-- 网关配置解析 -->
		<property name="gatewayXmlParser" ref="gatewayXml" />
		<property name="protocol">
			<bean id="com.lxt2.gateway.sms.GatewayConfig.CMPP20"
				class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean" />
		</property>
		<!-- 网关速度控制 -->
		<property name="speeder">
			<bean id="cmpp20EquidistributionSpeeder2202" class="com.techcenter.speed.IntervalSecondSpeeder"
				destroy-method="destroy">
				<constructor-arg index="0" value="100" />
			</bean>
		</property>
		<!-- 网关ID -->
		<property name="gatewayID" ref="gatewayId2202" />
		<!-- 下行队列 -->
		<property name="submitQueue" ref="mtsPersistentSubmitQueueAdapter2202" />
		<!-- 下行响应队列 -->
		<property name="respQueue" ref="mtsPersistentRespQueueAdapter2202" />
		<!-- 上行队列 -->
		<property name="deliverQueue" ref="mtsPersistentDeliverQueueAdapter2202" />
		<!-- 状态报告处理队列 -->
		<property name="reportQueue" ref="mtsPersistentReportQueueAdapter2202" />
		<!-- 重发错误码 -->
		<property name="errorReSendMap">
			<map>
				<entry key="-8" value="-8" />
			</map>
		</property>
		<!-- 限制重发测试标志，true：限制，false：不限制 -->
		<property name="errorReSendCountLimitFlag" value="true" />
		<!-- 数据采集 -->
		<property name="dataGather" ref="mtsDataGather2202" />
		<!-- 总线 -->
		<property name="hub" ref="hubImpl" />
	</bean>
	<!-- 设置短信发送Support -->
	<bean id="mtsCmpp20Support2202" class="com.lxt2.gateway.sms.SessionFlag"
		scope="prototype">
		<property name="handler" value="mtsCmpp20Handler2202" />
		<property name="param" value="mtsCmpp20Parameter2202" />
		<property name="gwconfig" ref="mtsCmpp20GatewayConfig2202" />
	</bean>
	<bean name="mtsCmpp20Handler2202" class="com.lxt2.gateway.sms.protocol.cmpp20.Cmpp20_Handler"
		scope="prototype">
		<property name="gwconfig" ref="mtsCmpp20GatewayConfig2202" />
	</bean>
	<!-- 设置短信网关对象 -->
	<bean id="mtsCmpp20Gateway2202" name="gatewayGlobal" class="com.lxt2.gateway.sms.Gateway"
		destroy-method="stopSystem" lazy-init="true">
		<property name="socketCount" value="1" />
		<property name="supportName" value="mtsCmpp20Support2202" />
		<property name="config" ref="mtsCmpp20GatewayConfig2202" />
	</bean>

	<bean id="mtsCmpp20reportAdapter2202" class="com.lxt2.adapter.cmpp20.Cmpp20ReportAdapter" />

	<bean id="mtsCmpp20DeliverAdapter2202" class="com.lxt2.adapter.cmpp20.Cmpp20DeliverAdapter"
		init-method="init">
		<property name="gatewayid" ref="gatewayId2202" />
		<property name="gatewayXmlParser" ref="gatewayXml" />
	</bean>
</beans>
